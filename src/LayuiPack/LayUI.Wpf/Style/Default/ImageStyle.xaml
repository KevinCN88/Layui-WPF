<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Lay="clr-namespace:LayUI.Wpf.Controls">
    <Style x:Key="LayImageStyle" TargetType="Lay:LayImage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Lay:LayImage}">
                    <Image
                        x:Name="PART_Image"
                        Source="{TemplateBinding Bitmap}"
                        Stretch="{TemplateBinding Stretch}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style BasedOn="{StaticResource LayImageStyle}" TargetType="Lay:LayImage" />
</ResourceDictionary>