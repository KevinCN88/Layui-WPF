    <!--  滑条  -->
    <Style x:Key="LaySliderStyle" TargetType="{x:Type Lay:LaySlider}">
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="100" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="IsMoveToPointEnabled" Value="True" />
        <!--  禁止系统默认气泡样式  -->
        <Setter Property="AutoToolTipPlacement" Value="None" />
        <!--  整数位移  -->
        <Setter Property="IsSnapToTickEnabled" Value="True" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Background" Value="{DynamicResource Green}" />
        <Setter Property="Template" Value="{StaticResource LaySliderHorizontal}" />
        <Style.Triggers>
            <MultiTrigger>
                <!--  垂直靠右气泡条件  -->
                <MultiTrigger.Conditions>
                    <Condition Property="Orientation" Value="Vertical" />
                    <Condition Property="TipsPosition" Value="Left" />
                </MultiTrigger.Conditions>
                <Setter Property="Template" Value="{StaticResource LaySliderVertical}" />
            </MultiTrigger>
            <!--  垂直靠右气泡条件  -->
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Orientation" Value="Vertical" />
                    <Condition Property="TipsPosition" Value="Right" />
                </MultiTrigger.Conditions>
                <Setter Property="Template" Value="{StaticResource LaySliderVertical}" />
            </MultiTrigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="#C2C2C2" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style BasedOn="{StaticResource LaySliderStyle}" TargetType="Lay:LaySlider" />
