                                                                    <Storyboard>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ThumbScaleTransform"
                                                                            Storyboard.TargetProperty="ScaleX"
                                                                            To="1.125"
                                                                            Duration="0:0:0.2" />
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ThumbScaleTransform"
