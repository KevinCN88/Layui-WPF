                                                                            Storyboard.TargetProperty="ScaleX"
                                                                            Duration="0:0:0.2" />
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ThumbScaleTransform"
                                                                            Storyboard.TargetProperty="ScaleY"
