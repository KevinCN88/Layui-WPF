                                                                            Duration="0:0:0.2" />
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ThumbScaleTransform"
                                                                            Storyboard.TargetProperty="ScaleY"
                                                                            To="1.125"
                                                                            Duration="0:0:0.2" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </MultiDataTrigger.EnterActions>
                                                            <MultiDataTrigger.ExitActions>
                                                                <BeginStoryboard>
