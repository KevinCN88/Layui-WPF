                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ThumbScaleTransform"
                                                                            Storyboard.TargetProperty="ScaleX"
                                                                            To="1.125"
                                                                            Duration="0:0:0.2" />
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ThumbScaleTransform"
                                                                            Storyboard.TargetProperty="ScaleY"
                                                                            To="1.125"
                                                                            Duration="0:0:0.2" />
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ToolTip"
                                                                            Storyboard.TargetProperty="Opacity"
                                                                            To="1"
                                                                            Duration="0:0:0.1" />
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ToolTip"
                                                                            Storyboard.TargetProperty="(Canvas.Bottom)"
                                                                            To="25"
                                                                            Duration="0:0:0.1" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </MultiDataTrigger.EnterActions>
                                                            <MultiDataTrigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ThumbScaleTransform"
                                                                            Storyboard.TargetProperty="ScaleX"
                                                                            Duration="0:0:0.2" />
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="ThumbScaleTransform"
                                                                            Storyboard.TargetProperty="ScaleY"
