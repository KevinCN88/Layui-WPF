                                                            Width="{TemplateBinding Width}"
                                                            Height="{TemplateBinding Height}"
                                                            Background="White"
                                                            BorderBrush="{TemplateBinding Background}"
                                                            BorderThickness="2"
                                                            CornerRadius="8"
